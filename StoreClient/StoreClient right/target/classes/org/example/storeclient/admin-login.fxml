<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane alignment="CENTER" hgap="10" prefHeight="200" prefWidth="300" vgap="10" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.storeclient.AdminLoginController">


    <Label text="Admin Login" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="0">
      <font>
         <Font name="Berlin Sans FB Demi Bold" size="15.0" />
      </font></Label>

    <Label text="Username:" GridPane.columnIndex="0" GridPane.rowIndex="1">
      <font>
         <Font name="Berlin Sans FB Demi Bold" size="14.0" />
      </font></Label>
    <TextField fx:id="usernameField" style="-fx-background-color: #963938;" GridPane.columnIndex="1" GridPane.rowIndex="1">
      <font>
         <Font name="Berlin Sans FB Demi Bold" size="16.0" />
      </font></TextField>

    <Label text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="2">
      <font>
         <Font name="Berlin Sans FB Demi Bold" size="14.0" />
      </font></Label>
    <PasswordField fx:id="passwordField" style="-fx-background-color: #963938;" GridPane.columnIndex="1" GridPane.rowIndex="2">
      <font>
         <Font name="Berlin Sans FB Demi Bold" size="17.0" />
      </font></PasswordField>

    <Button onAction="#handleLoginButton" style="-fx-background-color: #963938;" text="Login" GridPane.columnIndex="1" GridPane.rowIndex="3">
      <font>
         <Font name="Berlin Sans FB Demi Bold" size="15.0" />
      </font></Button>
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
    <!-- Background Image -->


</GridPane>
