<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<StackPane xmlns="http://javafx.com/javafx/11.0.1"
           xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.storeclient.AddRecipeUserController">

    <!-- Background Image -->
    <ImageView fitHeight="600" fitWidth="1000">
        <Image url="@images/sweet-pancakes-picture-id1199607352.jpg" /> <!-- Update the path to your image -->
    </ImageView>

    <VBox alignment="BASELINE_LEFT" spacing="30" xmlns="http://javafx.com/javafx/11.0.1">

        <TextField fx:id="recipeTitleField" alignment="TOP_LEFT" maxWidth="-Infinity" prefHeight="23.0" prefWidth="299.0" promptText="Recipe Name" style="-fx-background-color: #963938FF;">
            <font>
                <Font name="Berlin Sans FB Demi Bold" size="17.0" />
            </font></TextField>
        <TextField fx:id="recipeDescriptionField" maxWidth="-Infinity" prefHeight="18.0" prefWidth="300.0" promptText="Recipe Description" style="-fx-background-color: #963938FF;">
            <font>
                <Font name="Berlin Sans FB Demi Bold" size="17.0" />
            </font></TextField>
        <TextField fx:id="cheffield" maxWidth="-Infinity" prefHeight="22.0" prefWidth="300.0" promptText="Chef Name" style="-fx-background-color: #963938FF;">
            <font>
                <Font name="Berlin Sans FB Demi Bold" size="17.0" />
            </font></TextField>

        <Button onAction="#handleAddRecipeButtonClick" prefHeight="23.0" prefWidth="160.0" style="-fx-background-color: #963938FF;" text="Add Recipe" textFill="WHITE">
            <font>
                <Font name="Berlin Sans FB Demi Bold" size="16.0" />
            </font></Button>


        <Button onAction="#handleBackButtonClick" prefHeight="29.0" prefWidth="158.0" style="-fx-background-color: #963938FF;" text="Back" textFill="WHITE">
            <font>
                <Font name="Berlin Sans FB Demi Bold" size="16.0" />
            </font></Button>

    </VBox>
</StackPane>
